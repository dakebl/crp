%#<!DOCTYPE html>
%# Blocks for standardising input fields

% my %BOOLEAN_ATTRIBUTE = (
%   default => 1,
%   checked => 1,
% );


% my $input_text = begin
%   my($name, $default, $attributes) = @_;
<input type="text" name="<%= $name %>" value="<%= $default %>"\
%   foreach my $key (keys %{$attributes // {}}) {
<%= $key %>="<%= $BOOLEAN_ATTRIBUTE{$key} ? ($attributes->{$key} ? $key : '') : $attributes->{$key} %>"
%   }
/>
% end
