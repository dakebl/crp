<!DOCTYPE html>
<html>
    <head>
        <title><%= title %> - The Children's Reflexology Programme</title>
        <link rel="shortcut icon" href="<%= url_for '/favicon.ico' %>">
        <link rel="apple-touch-icon-precomposed" href="<%= url_for '/favicon/favicon-152.png' %>">
        <meta name="msapplication-TileColor" content="#FFFFFF">
        <meta name="msapplication-TileImage" content="<%= url_for '/favicon/favicon-144.png' %>">
        <meta charset="utf-8">
        <link rel="stylesheet" href="<%= url_for '/css/main.css' %>">
% foreach my $extra_template (@{crp_stash_list 'extra_header_templates'}) {
%=   include $extra_template
% }
%#---------------------------------------------------------------------------
% my $menu_entry = sub {
%   my($page_id, $href, $desc) = @_;
%   my $this_page = (stash('page_id') || '') eq ($page_id || '');
<% if($this_page) { =%>
<li class="selected">&bull;&nbsp;<%
} else { =%>
<li>&nbsp;&nbsp;<%
} =%>
<% if(!$this_page) { =%><a href="<%= url_for $href %>"><% } =%>
<%= $desc =%>
<% if(!$this_page) { =%></a><% } =%>
</li>
% };
%#---------------------------------------------------------------------------
    </head>
    <body class="page-body">
        <div id="main-body-container">
            <h1 id="heading"><img src="<%= url_for '/images/CRPLogoSmall.png' %>" />
                <%= stash('heading') || "The Children's Reflexology Programme" =%>
            </h1>
            <div id="footrow"></div>
            <table>
                <tr>
                    <td id="left-nav-container">
                        <div id="left-nav">
                            <ul>
                                % $menu_entry->('home',      '/', 'Home');
                                % $menu_entry->('book',      '/', 'Book');
                                % $menu_entry->('programme', '/', 'Programme');
                                % $menu_entry->('courses',   '/', 'Courses');
                                % $menu_entry->('tutors',    '/', 'Tutors');
                                % $menu_entry->('contact',   '/page/contact', 'Contact');
                            </ul>
                            <img src="<%= url_for '/images/Pokers.png' %>">
                        </div>
                    </td>
                    <td id="content-container">
                        <div id="content">
%= content
                        </div>
                    </td>
                </tr>
            </table>
            <div id="bottom-spacer"></div>
            <div id="bottom-nav">
                <a href="http://www.susanquayle.co.uk/"><img src="/images/SQCHLogoSmall.png" id="sq-logo" /></a>
                <ul>
                    <li>copyright</li>
                    <li>copyright</li>
                    <li>copyright</li>
                    <li>copyright</li>
                </ul>
            </div>
            <img src="/images/CornerMouse.png" id="corner-mouse" />
        </div>
    </body>
</html>
